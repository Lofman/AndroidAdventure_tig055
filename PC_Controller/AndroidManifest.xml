<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pc_controller"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.pc_controller.StartActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pc_controller.KeyboardActivity"
            android:label="@string/title_activity_keyboard" 
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="com.example.pc_controller.TouchpadActivity"
            android:label="@string/title_activity_touchpad" 
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="com.example.pc_controller.GamingActivity"
            android:label="@string/title_activity_gaming" 
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
