<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pc_controller.StartActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/start_text1" />

    <Button
        android:id="@+id/btn1Keyboard"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:text="@string/start_btn1Keyboard" 
        android:onClick="btn1KeyboardClicked"/>

    <Button
        android:id="@+id/btn2Touchpad"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn1Keyboard"
        android:layout_toRightOf="@+id/btn1Keyboard"
        android:text="@string/start_btn2Touchpad" 
        android:onClick="btn2TouchpadClicked"/>

    <Button
        android:id="@+id/btn3Gaming"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn2Touchpad"
        android:layout_toRightOf="@+id/btn2Touchpad"
        android:text="@string/start_btn3Gaming" 
        android:onClick="btn3GamingClicked"/>

</RelativeLayout>
